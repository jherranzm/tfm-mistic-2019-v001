<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uoc.mistic.tfm.jherranzm.ui.activities.InvoiceDataRecyclerViewActivity">

    <TextView
        android:id="@+id/textViewNumInvoiceFilesInSystem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/numInvoiceDataInSystem"
        android:textAlignment="center"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonShowInfoByProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/totalsByProvider" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/getAllByProviderAndYear" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/invoice_data_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
