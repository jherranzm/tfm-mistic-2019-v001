<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apptestvalidationandroid44.ReceivedInvoicesRecyclerViewActivity">

    <TextView
        android:id="@+id/textViewNumInvoiceFilesInSystem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/numInvoiceFilesInSystem" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/local_invoices_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
