<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uoc.mistic.tfm.jherranzm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="edu.uoc.mistic.tfm.jherranzm.InvoiceApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- SplashActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- UploadedInvoicesRecyclerViewActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.UploadedInvoicesRecyclerViewActivity"
            android:label="@string/app_name"
            android:parentActivityName="edu.uoc.mistic.tfm.jherranzm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ReceivedInvoicesRecyclerViewActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.ReceivedInvoicesRecyclerViewActivity"
            android:label="@string/app_name"
            android:parentActivityName="edu.uoc.mistic.tfm.jherranzm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- InvoiceDataRecyclerViewActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.InvoiceDataRecyclerViewActivity"
            android:label="@string/app_name"
            android:parentActivityName="edu.uoc.mistic.tfm.jherranzm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SignUpActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.SignUpActivity"
            android:label="@string/app_name"
            android:parentActivityName="edu.uoc.mistic.tfm.jherranzm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LogInActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.LogInActivity"
            android:label="@string/app_name"
            android:parentActivityName="edu.uoc.mistic.tfm.jherranzm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TotalsByProviderRecyclerViewActivity -->
        <activity
            android:name="edu.uoc.mistic.tfm.jherranzm.TotalsByProviderRecyclerViewActivity"
